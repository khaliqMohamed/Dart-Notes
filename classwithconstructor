//CLASS WITH CONSTRUCTOR


void main(){
  BakeryShop B_Shop=BakeryShop('White Forest',30);
  B_Shop.deliveryStatus();
  B_Shop.userConfirmation();
  B_Shop.greetingMsg();
}

class BakeryShop{
  String itemName;
  double itemPrice;
  BakeryShop(this.itemName,this.itemPrice){
    print("Welcome to Our bakery Shop...What You Want To Do?");
    print('Item Name is $itemName');
    print('Item Price is $itemPrice\$');
    itemPreparation();
    
  }
  
  void itemPreparation(){
    print("preparations are done...");
    print('-----------------------------------------');
  }




void main(){
  final cookiestore=cookie('butter cookie',15);
  
  
}

class cookie{
  String? cookieName;
  double? cookiePrice;    //declared a variables publicly bcoz we get the values from the object creation of the class and store it.
  bool? isCool;
  
  cookie(this.cookieName,this.cookiePrice){   //this. mean to get the values from the object creation of the class and store it.
    print('want to know about the cookie status?');
    baking();
    isCooling();
    print('want to know about the delivery status?');
    deliveryStatus();
  }
  
  void baking(){
    print('$cookieName baking process is ongoing...');
  }
  
  bool isCooling(){
    return isCool=true;
  }
  
  void deliveryStatus(){
    print('$cookieName & \$$cookiePrice  is secessfully delivered...');
  }
}
  
  
  void deliveryStatus(){
    print('item ready for delivery...waiting for receive a address');
    print('-----------------------------------------');
  }
  
  void userConfirmation(){
    print('Waiting for User Confirmation to received an item successful!');
    print('-----------------------------------------');
  }
  
  void greetingMsg(){
    print('Thank You for Choosing Our Bakery... Please give us the rating point');
  }
  
}
